<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <h6 class="mb-10">
                    <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">Clients</font>
                    </font>
                </h6>
                <div class="flex justify-content-end">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#addUser">Ajouter un client</button>
                </div>
                <p class="text-sm mb-20">
                    <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">

                        </font>
                    </font>
                </p>
                <div class="table-wrapper table-responsive">
                    <table class="table" table-sort>
                        <thead>
                            <tr>
                                <th class="lead-info">
                                    <h6>
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">Nom</font>
                                        </font>
                                    </h6>
                                </th>
                                <th class="lead-company">
                                    <h6>
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">Prénom</font>
                                        </font>
                                    </h6>
                                </th>
                                <th class="lead-email">
                                    <h6>
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">E-mail</font>
                                        </font>
                                    </h6>
                                </th>
                                <th class="lead-phone">
                                    <h6>
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">N° de téléphone</font>
                                        </font>
                                    </h6>
                                </th>

                                <th>
                                    <h6>
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">Action</font>
                                        </font>
                                    </h6>
                                </th>
                            </tr>
                            <!-- end table row-->
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td class="min-width">
                                    <div class="lead">
                                        <div class="lead-image">
                                            <img src="/images/profile/default.png" alt="">
                                        </div>
                                        <div class="lead-text">
                                            <p>
                                                <font style="vertical-align: inherit;">
                                                    <font style="vertical-align: inherit;">{{name}}</font>
                                                </font>
                                            </p>
                                        </div>
                                    </div>
                                </td>
                                <td class="min-width">
                                    <p>
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">{{lastname}}</font>
                                        </font>
                                    </p>
                                </td>
                                <td class="min-width">
                                    <p><a href="mailto:{{email}}">
                                            <font style="vertical-align: inherit;">
                                                <font style="vertical-align: inherit;">{{email}}</font>
                                            </font>
                                        </a></p>
                                </td>
                                <td class="min-width">
                                    <p><a href="tel:{{contact}}">
                                            <font style="vertical-align: inherit;">
                                                <font style="vertical-align: inherit;">{{contact}}</font>
                                            </font>
                                        </a></p>
                                </td>

                                <td>
                                    <div class="action">
                                        <a href="/admin/personnel/remove/{{id}}" class="text-danger">
                                            <i class="lni lni-trash-can"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                    <!-- end table -->
                </div>
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->


    <!-- Modal -->
    <div class="modal modal-center fade" id="addUser" tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitleId">
                        Ajouter un Client
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="">
                        <form action="/admin/personnel/client" method="post">
                         <div class="mb-3">
                            <label for="name" class="form-label">Nom</label>
                            <input
                                type="text"
                                class="form-control"
                                name="name"
                                id="name"
                                aria-describedby="helpId"
                                placeholder=""
                                required
                            />
                           
                         </div>
                         <div class="mb-3">
                            <label for="lastname" class="form-label">Prénom</label>
                            <input
                                type="text"
                                class="form-control"
                                name="lastname"
                                id="lastname"
                                aria-describedby="helpId"
                                placeholder=""
                                required
                            />
                           
                         </div>
                         <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input
                                type="email"
                                class="form-control"
                                name="email"
                                id="email"
                                required
                                aria-describedby="helpId"
                                placeholder=""
                            />
                           
                         </div>
                         <div class="mb-3">
                            <label for="contact" class="form-label">N° de téléphone</label>
                            <input
                                type="tel"
                                class="form-control"
                                name="contact"
                                id="contact"
                                required
                                aria-describedby="helpId"
                                placeholder=""
                            />
                           
                         </div>
                         
                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Fermer
                    </button>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        var addUser = document.getElementById('addUser');

        modalId.addEventListener('show.bs.modal', function (event) {
            // Button that triggered the modal
            let button = event.relatedTarget;
            // Extract info from data-bs-* attributes
            let recipient = button.getAttribute('data-bs-whatever');

            // Use above variables to manipulate the DOM
        });
    </script>


</div>