<div class="container-fluid py-5">
    <button class="btn btn-primary mb-5" data-bs-toggle="modal" data-bs-target="#createIssue">
        <i class="lni lni-plus"></i>
        Signaler un problème
    </button>
    <div class="table-responsive">
        <table class="table p-2" table-sort>
            <thead class="" >
              
                <tr>
                    <th>Titre</th>
                    <th>Desctiption</th>
                    <th>Date d'exécussion</th>
                    <th>Lieu</th>
                    <th>Signalé par</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class=" p-2">
                {{#each issues}}
                <tr class="">
                    <td scope="row"><i class="lni text-warning lni-bug"></i> {{name}}</td>
                    <td>{{shortText description}}</td>
                    <td>{{hbsDate end}}</td>
                    <td>{{location}}</td>
                    <td>{{"User.name"}}</td>
                    <td>
                        <button data-bs-toggle="modal" data-bs-target="#editIssue{{id}}" class="btn btn-sm btn-warning">
                            <i class="lni lni-pencil-alt "></i>
                        </button>
                        <a href="/admin/issue/remove{{id}}" confirm confirm-msg="Cet action est irréversible" class="btn btn-sm btn-danger">
                            <i class="lni lni-trash-can "></i>
                        </a>
                    </td>
                </tr>

                <!-- Modal Body -->
                <!-- if you want to close by clicking outside the modal, delete the last endpoint:data-bs-backdrop and data-bs-keyboard -->
                <div class="modal fade" id="editIssue{{id}}" tabindex="-1" data-bs-backdrop="static"
                    data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalTitleId">
                                    Editer un issue
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/admin/issue/update" method="post">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Titre</label>
                                        <input type="text" class="form-control" name="name" id="name"
                                            aria-describedby="helpId" placeholder="" value="{{name}}" />
                                        <small id="helpId" class="form-text text-muted">Donner un intitulé à votre
                                            problème</small>
                                    </div>
                                    <div class="mb-3">
                                        <label for="description" class="form-label">Description</label>
                                        <textarea name="description" class="form-control" id="description">{{description}}</textarea>
                                        <small id="helpId" class="form-text text-muted">Expliquer votre problème</small>
                                    </div>
                                    <div class="mb-3">
                                        <label for="end" class="form-label">Date d'exécution</label>
                                        <input type="datetime-local" class="form-control" name="end" id="end"
                                            aria-describedby="helpId" placeholder="" value="{{inputDate end}}"/>
                                        <small id="helpId" class="form-text text-muted">
                                            Préciser le moment ou vous souhaiter que l'intervention ait lieu
                                        </small>
                                    </div>
                                    <div class="mb-3">
                                        <label for="location" class="form-label">Lieu</label>
                                        <input type="text" class="form-control" name="location" id="location"
                                            aria-describedby="helpId" placeholder="" />
                                        <small id="helpId" class="form-text text-muted">
                                            Préciser le lieu de l'intervention
                                        </small>
                                    </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    Fermer
                                </button>
                                <button type="submit" class="btn btn-primary">Modifier</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

              

                {{/each}}

            </tbody>
            
        </table>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="createIssue" tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-md " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitleId">
                    Signaler
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Titre</label>
                        <input type="text" class="form-control" name="name" id="name" aria-describedby="helpId"
                            placeholder="" />
                        <small id="helpId" class="form-text text-muted">Donner un intitulé à votre problème</small>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="description" class="form-control" id="description"></textarea>
                        <small id="helpId" class="form-text text-muted">Expliquer votre problème</small>
                    </div>
                    <div class="mb-3">
                        <label for="end" class="form-label">Date d'exécution</label>
                        <input type="datetime-local" class="form-control" name="end" id="end" aria-describedby="helpId"
                            placeholder="" />
                        <small id="helpId" class="form-text text-muted">
                            Préciser le moment ou vous souhaiter que l'intervention ait lieu
                        </small>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Lieu</label>
                        <input type="text" class="form-control" name="location" id="location" aria-describedby="helpId"
                            placeholder="" />
                        <small id="helpId" class="form-text text-muted">
                            Préciser le lieu de l'intervention
                        </small>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Fermer
                </button>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                </form>
            </div>
        </div>
    </div>
</div>